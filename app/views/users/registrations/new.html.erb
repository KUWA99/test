<div class="bigfield">
<div class="newregistration">
<h2>新規登録</h2>
</div>
<div class="write-field">
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email",class: "newfield" %>
  </div>
  <div class="field">
    <%= f.label :お名前 %> <br />
    <%= f.text_field :name,class: "newfield" %>
  </div>

  <div class="field">
    <%= f.label :パスワード %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> 文字以上)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" ,class: "newfield"%>
  </div>

  <div class="field">
    <%= f.label :パスワード確認 %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password",class: "newfield" %>
  </div>

  <div class="field">
    <%= f.label :身長 %> <br />
    <%= f.number_field :height,class: "newfield" %>cm
  </div>
  <div class="field">
    <%= f.label :体重 %> <br />
    <%= f.number_field :weight,class: "newfield" %>Kg
  </div>
  <div class="field">
    <%= f.label :性別 %> <br />
  
   ※ 男性ならば'Men' or 女性ならば"Women"と入力。
    <br>
    <%= f.text_field :gender,class: "newfield" %>
  </div>
  <div class="field">
    <%= f.label :年齢 %> <br />
    <%= f.number_field :age,class: "newfield" %>
  </div>
  </div>

  <div class="actions">
    <%= f.submit "Sign up" , class:"singnbtn" %>
  </div>
<% end %>

<%= image_tag "reflection.jpeg", alt:"" ,class: "pic2", width: "500px", height: "800px" %>
</div>
</div>